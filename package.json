{
  "name": "ai-code-reviewer",
  "displayName": "AI Code Reviewer",
  "description": "A VS Code extension that uses OpenAI to review your code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:codeReviewView"
  ],
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "main": "./extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "ai-code-reviewer.aiCodeReviewer",
        "fullName": "AI Code Reviewer",
        "name": "aiCodeReviewer",
        "description": "Generate code reviews with AI",
        "isSticky": true
      }
    ],
    "commands": [
      {
        "command": "ai-code-reviewer.editAssistantId",
        "title": "Edit Code Reviewer Assistant ID"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "openai": "^4.83.0"
  }
}
